<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_image_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:id="@+id/msg_image_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />
    
    <ProgressBar 
        android:id="@+id/msg_image_right_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_image_right_content"
        android:layout_alignLeft="@id/msg_image_right_content"
        android:layout_alignRight="@id/msg_image_right_content"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal" />
    
    <TextView 
        android:id="@+id/msg_image_right_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_image_right_progress"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:background="#c0c0c0" />
    
</RelativeLayout>
